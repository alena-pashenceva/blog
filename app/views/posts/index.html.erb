
<h1 >Список сообщений</h1>
<% @posts.each do |post| %>
<div class="container">
  <div class="row">
   <div class="span4">
       Название <br>
      <%= post.title %>
   </div>
   <div class="span4">
      Текст <br>
     <%= post.text %>
   </div>   
   <div class="span4">

  <%= link_to 'Show', post_path(post) %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
 </div>
 </div>
<% end %>
