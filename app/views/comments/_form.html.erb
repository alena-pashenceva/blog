<% if user_signed_in? %>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
  <% else %>
  <p>
  <b>Для отправки комментарий необходимо </b> <%= link_to 'Зарегистрироваться', new_user_registration_path %>
  </p>
<% end %>